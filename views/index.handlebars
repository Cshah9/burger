<h1> Eat-Da-Burger </h1>

<h3> Burgers: </h3>

{{#each burgers}}
	{{#unless this.devoured}}
		<p> #{{this.id}} - {{this.burger_name}}   <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="true">
          <button type="submit">Devour!</button>
        </form></p>
	{{/unless}}
	
{{/each}}


<h3> Devoured: </h3>
{{#each burgers}}
	{{#if this.devoured}}
		<p> #{{this.id}} - {{this.burger_name}}</p>
	{{/if}}
{{/each}}